# =============================================================================
# MEC PREVISIONI - CONFIGURAZIONE AMBIENTE
# =============================================================================
# Copia questo file in .env e personalizza i valori
# NON committare il file .env (è già in .gitignore)

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Ambiente: development, production, testing
FLASK_ENV=development

# Debug mode (SOLO in development!)
FLASK_DEBUG=True

# Secret key per sessioni e CSRF (GENERA UNA CHIAVE SICURA!)
# Genera con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-me

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/mec_previsioni

# SQLite (Development) - Lascia commentato per usare default
# DATABASE_URL=sqlite:///instance/mec.db

# =============================================================================
# SECURITY
# =============================================================================

# Utente admin di default (CAMBIARE IN PRODUZIONE!)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production

# Utente demo (opzionale)
DEMO_USERNAME=demo
DEMO_EMAIL=demo@example.com
DEMO_PASSWORD=demo123

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Limite upload file (in MB)
MAX_UPLOAD_SIZE_MB=100

# Items per pagina
ITEMS_PER_PAGE=20

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (lascia vuoto per stdout)
LOG_FILE=logs/app.log

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================

# Cache type: simple, redis, memcached
CACHE_TYPE=simple

# Redis URL (se CACHE_TYPE=redis)
# REDIS_URL=redis://localhost:6379/0

# Cache timeout (secondi)
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# EMAIL (opzionale, per notifiche future)
# =============================================================================

# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-email-password

# =============================================================================
# EXTERNAL SERVICES (se necessario)
# =============================================================================

# API keys, credenziali servizi esterni, etc.
