# =============================================================================
# Flask Configuration
# =============================================================================

# OBBLIGATORIO in production: Secret key per sessioni e CSRF protection
# Generare una chiave sicura con: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=your-secret-key-here-generate-with-secrets-module

# Flask Environment (development/production)
# In development: DEBUG=True, logging verboso
# In production: DEBUG=False, SESSION_COOKIE_SECURE=True
FLASK_ENV=development
FLASK_DEBUG=1

# =============================================================================
# Database Configuration
# =============================================================================

# URL del database (opzionale, default: SQLite locale in instance/mec.db)
# Esempi:
#   SQLite (default): sqlite:///instance/mec.db
#   PostgreSQL: postgresql://username:password@localhost:5432/mec_previsioni
#   PostgreSQL (Docker): postgresql://mec:password@localhost:5432/mec_previsioni
# DATABASE_URL=sqlite:///instance/mec.db

# =============================================================================
# Upload Configuration
# =============================================================================

# Dimensione massima upload file (in MB)
# Default: 100 MB
# MAX_CONTENT_LENGTH_MB=100

# =============================================================================
# Logging Configuration
# =============================================================================

# Livello di logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: DEBUG in development, INFO in production
# LOG_LEVEL=INFO

# =============================================================================
# Application Configuration
# =============================================================================

# Numero di elementi per pagina (paginazione)
# Default: 20
# ITEMS_PER_PAGE=20

# =============================================================================
# Security Configuration (Production Only)
# =============================================================================

# Abilita cookie sicuri (richiede HTTPS)
# Default: False in development, True in production
# SESSION_COOKIE_SECURE=True

